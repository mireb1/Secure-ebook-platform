# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ebook-platform

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
EMAIL_FROM=security@mireb-commercial.com

# Security Configuration
COOKIE_SECRET=your_cookie_secret_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here
BLACKLISTED_IPS=

# File Storage Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=100000000 # 100MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # Maximum requests per window

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_DURATION=604800000 # 7 days in milliseconds

# 2FA Configuration
TWO_FACTOR_WINDOW=180 # 3 minutes validity window for 2FA tokens

# DRM Configuration
DRM_ENABLED=true
DEFAULT_DRM_TYPE=encryption

# Subscription Plans (in cents)
BASIC_PLAN_PRICE=999    # €9.99
PREMIUM_PLAN_PRICE=1999 # €19.99
ULTIMATE_PLAN_PRICE=2999 # €29.99
